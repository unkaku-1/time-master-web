# Time Master Enterprise - 环境变量配置示例
# 复制此文件为 .env.local 并填入实际值

# ===========================================
# 前端配置 (React + Vite)
# ===========================================

# API 配置
VITE_API_BASE_URL=http://localhost:5000
VITE_API_TIMEOUT=10000

# 应用配置
VITE_APP_NAME=Time Master Enterprise
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=企业级任务管理系统

# 功能开关
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_MOCK_DATA=false

# 第三方服务
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# ===========================================
# 后端配置 (Flask)
# ===========================================

# Flask 基础配置
FLASK_ENV=development
SECRET_KEY=your-very-secret-key-change-this-in-production
DEBUG=True

# 数据库配置
DATABASE_URL=sqlite:///data/timemaster.db
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=30

# JWT 配置
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# ===========================================
# LDAP 配置
# ===========================================

# LDAP 服务器配置
LDAP_SERVER=ldap://your-ldap-server.company.com
LDAP_PORT=389
LDAP_USE_SSL=false
LDAP_USE_TLS=true

# LDAP 认证配置
LDAP_BASE_DN=dc=company,dc=com
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=your-ldap-admin-password

# LDAP 用户搜索配置
LDAP_USER_SEARCH_BASE=ou=users,dc=company,dc=com
LDAP_USER_SEARCH_FILTER=(uid={username})
LDAP_USER_OBJECT_CLASS=inetOrgPerson

# LDAP 属性映射
LDAP_ATTR_USERNAME=uid
LDAP_ATTR_EMAIL=mail
LDAP_ATTR_FIRST_NAME=givenName
LDAP_ATTR_LAST_NAME=sn
LDAP_ATTR_DEPARTMENT=departmentNumber

# ===========================================
# SMTP 邮件配置
# ===========================================

# SMTP 服务器配置
SMTP_SERVER=smtp.company.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# SMTP 认证
SMTP_USERNAME=noreply@company.com
SMTP_PASSWORD=your-smtp-password

# 邮件发送配置
MAIL_FROM_NAME=Time Master Enterprise
MAIL_FROM_EMAIL=noreply@company.com
MAIL_REPLY_TO=support@company.com

# ===========================================
# 安全配置
# ===========================================

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_LOGIN=10/minute

# 会话配置
SESSION_TIMEOUT=3600
SESSION_REFRESH_THRESHOLD=300

# 密码策略
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 日志文件配置
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/timemaster.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# 日志输出配置
LOG_CONSOLE_ENABLED=true
LOG_SYSLOG_ENABLED=false

# ===========================================
# 监控和分析
# ===========================================

# Sentry 错误监控
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# 性能监控
ENABLE_PERFORMANCE_MONITORING=false
PERFORMANCE_SAMPLE_RATE=0.1

# 健康检查
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# ===========================================
# 缓存配置
# ===========================================

# Redis 缓存 (可选)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# 缓存策略
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=timemaster:

# ===========================================
# 文件存储配置
# ===========================================

# 本地文件存储
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# 云存储 (可选)
CLOUD_STORAGE_ENABLED=false
CLOUD_STORAGE_PROVIDER=aws
CLOUD_STORAGE_BUCKET=timemaster-files
CLOUD_STORAGE_REGION=us-east-1

# ===========================================
# 开发配置
# ===========================================

# 开发模式配置
DEV_MODE=true
DEV_MOCK_LDAP=true
DEV_MOCK_SMTP=true
DEV_AUTO_LOGIN=false

# 测试配置
TESTING=false
TEST_DATABASE_URL=sqlite:///:memory:

# ===========================================
# 生产环境配置示例
# ===========================================

# 生产环境请使用以下配置：
# FLASK_ENV=production
# DEBUG=False
# SECRET_KEY=生成的强密钥
# JWT_SECRET_KEY=生成的强密钥
# LDAP_SERVER=生产LDAP服务器
# SMTP_SERVER=生产SMTP服务器
# CORS_ORIGINS=https://timemaster.company.com
# LOG_LEVEL=WARNING
# SENTRY_DSN=生产Sentry DSN

