# Time Master Enterprise - 生产环境配置
# 请根据实际生产环境修改以下配置

# ===========================================
# 前端配置 (React + Vite)
# ===========================================

# API 配置 - 请修改为实际的生产API地址
VITE_API_BASE_URL=https://api.timemaster.company.com
VITE_API_TIMEOUT=15000

# 应用配置
VITE_APP_NAME=Time Master Enterprise
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=企业级任务管理系统

# 功能开关
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_DATA=false

# 第三方服务 - 请填入实际的生产环境密钥
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ===========================================
# 后端配置 (Flask) - 仅供参考
# ===========================================

# Flask 基础配置
FLASK_ENV=production
SECRET_KEY=生成的强密钥-请更换为实际密钥
DEBUG=False

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/timemaster_prod
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30

# JWT 配置
JWT_SECRET_KEY=生成的JWT密钥-请更换为实际密钥
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# LDAP 配置 - 请修改为实际的LDAP服务器
LDAP_SERVER=ldaps://ldap.company.com
LDAP_PORT=636
LDAP_USE_SSL=true
LDAP_USE_TLS=false

# LDAP 认证配置
LDAP_BASE_DN=dc=company,dc=com
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=实际的LDAP管理员密码

# SMTP 邮件配置 - 请修改为实际的SMTP服务器
SMTP_SERVER=smtp.company.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=noreply@company.com
SMTP_PASSWORD=实际的SMTP密码

# 安全配置
CORS_ORIGINS=https://timemaster.company.com
CORS_ALLOW_CREDENTIALS=true

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=1000/hour
RATE_LIMIT_LOGIN=20/minute

# 日志配置
LOG_LEVEL=WARNING
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/timemaster/timemaster.log

# 监控和分析
SENTRY_DSN=https://your-backend-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# 缓存配置
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=600

# 生产环境安全提醒：
# 1. 请确保所有密钥都是强密钥且唯一
# 2. 定期轮换密钥
# 3. 使用HTTPS协议
# 4. 配置防火墙和安全组
# 5. 启用日志监控和告警