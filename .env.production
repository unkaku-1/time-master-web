# Time Master Enterprise - 生产环境配置
# 请根据实际生产环境修改以下配置

# ===========================================
# 前端配置 (React + Vite)
# ===========================================

# 开发模式配置 - 临时启用以解决部署问题
VITE_DEV_MODE=true
VITE_MOCK_LOGIN=true
VITE_DEV_ADMIN_USERNAME=admin
VITE_DEV_ADMIN_PASSWORD=admin123

# API 配置 - 请修改为实际的生产API地址
VITE_API_BASE_URL=https://api.timemaster.company.com
VITE_API_TIMEOUT=15000

# 应用配置
VITE_APP_NAME=Time Master Enterprise
VITE_APP_VERSION=2.0.0
VITE_APP_DESCRIPTION=企业级任务管理系统

# 功能开关
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MOCK_DATA=false

# 第三方服务 - 请填入实际的生产环境密钥
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# ===========================================
# 后端配置 (Flask) - 仅供参考
# ===========================================

# Flask 基础配置
FLASK_ENV=production
SECRET_KEY=生成的强密钥-请更换为实际密钥
DEBUG=False

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost:5432/timemaster_prod
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30

# JWT 配置
JWT_SECRET_KEY=生成的JWT密钥-请更换为实际密钥
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# LDAP 配置 - 请修改为实际的LDAP服务器
LDAP_SERVER=ldaps://ldap.company.com
LDAP_PORT=636
LDAP_USE_SSL=true
LDAP_USE_TLS=false

# 用户认证配置
LDAP_BASE_DN=ou=users,dc=company,dc=com
LDAP_USER_FILTER=(uid={username})
LDAP_BIND_USER_DN=cn=admin,dc=company,dc=com
LDAP_BIND_USER_PASSWORD=请填入LDAP绑定用户密码

# 邮件配置
MAIL_SERVER=smtp.company.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=noreply@company.com
MAIL_PASSWORD=请填入邮件服务器密码
MAIL_DEFAULT_SENDER=Time Master <noreply@company.com>

# Redis 配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=请填入Redis密码

# 文件存储配置
UPLOAD_FOLDER=/var/uploads/timemaster
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx,xls,xlsx

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/var/log/timemaster/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# 安全配置
CORS_ORIGINS=https://timemaster.company.com,https://www.timemaster.company.com
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# 监控配置
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true